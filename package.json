{
    "name": "app-shell",
    "description": "Webcomponent app-shell following open-wc recommendations",
    "license": "MIT",
    "author": "app-shell",
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "tauri": "WEBKIT_DISABLE_COMPOSITING_MODE=1 npm run tauri:normal",
        "tauri:normal": "tauri",
        "lint": "eslint --ext .js,.html . --ignore-path .eslintignore && prettier \"**/*.js\" --check --ignore-path .eslintignore",
        "format": "eslint --ext .js,.html . --fix --ignore-path .eslintignore && prettier \"**/*.js\" --write --ignore-path .eslintignore",
        "test": "web-test-runner --coverage",
        "test:watch": "web-test-runner --watch",
        "storybook": " web-dev-server -c .storybook/server.mjs",
        "storybook:build": "npm run analyze --exclude dist && build-storybook",
        "build": "rimraf dist && rollup -c rollup.config.js && npm run analyze --exclude dist",
        "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
        "analyze": "cem analyze --litelement",
        "start": "web-dev-server"
    },
    "dependencies": {
        "@spectrum-web-components/base": "^0.40.2",
        "@spectrum-web-components/divider": "^0.40.2",
        "@spectrum-web-components/styles": "^0.40.2",
        "@spectrum-web-components/table": "^0.40.2",
        "@spectrum-web-components/theme": "^0.40.2",
        "@tauri-apps/api": "^1.5.3",
        "mashlib": "^1.8.9",
        "typescript": "^5.3.3",
        "workbox-window": "^7.0.0"
    },
    "devDependencies": {
        "@babel/plugin-syntax-import-assertions": "^7.23.3",
        "@babel/preset-env": "^7.23.7",
        "@custom-elements-manifest/analyzer": "^0.9.0",
        "@open-wc/building-rollup": "^3.0.2",
        "@open-wc/eslint-config": "^12.0.2",
        "@open-wc/testing": "^4.0.0",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@tauri-apps/cli": "^1.5.8",
        "@web/dev-server": "^0.4.1",
        "@web/dev-server-storybook": "^2.0.1",
        "@web/rollup-plugin-html": "^2.1.2",
        "@web/rollup-plugin-import-meta-assets": "^2.2.1",
        "@web/storybook-prebuilt": "^0.1.37",
        "@web/test-runner": "^0.18.0",
        "babel-plugin-template-html-minifier": "^4.1.0",
        "deepmerge": "^4.3.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsdoc": "^1.1.3",
        "prettier": "^3.1.1",
        "rimraf": "^3.0.2",
        "rollup": "^3.21.0",
        "rollup-plugin-esbuild": "^6.1.0",
        "rollup-plugin-workbox": "^8.1.0"
    },
    "eslintConfig": {
        "extends": [
            "@open-wc",
            "prettier",
            "plugin:jsdoc/recommended"
        ],
        "plugins": [
            "jsdoc"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "arrowParens": "always"
    },
    "customElements": "custom-elements.json"
}

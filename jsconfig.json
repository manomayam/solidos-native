{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable",
            "WebWorker"
        ],
        "strict": true,
        "module": "ES2022",
        "target": "ES2022",
        "useDefineForClassFields": true,
        "moduleResolution": "bundler",
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src-www/**/*.js",
        "public-www/sw.js"
    ],
    "exclude": [
        "src-tauri/**/*"
    ]
}
